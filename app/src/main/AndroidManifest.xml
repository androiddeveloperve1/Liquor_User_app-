        <activity android:name=".ui.MyOrdersActivity" />
        <activity android:name=".ui.AccountDetailActivity" />
        <activity android:name=".ui.MyAddressActivity" />
        <activity android:name=".ui.MyReviewActivity" />
        <activity android:name=".ui.PaymentInformationActivity" />
        <activity android:name=".ui.NotificationActivity" />
        <activity android:name=".ui.HelpAndSupportActivity" />
        <activity android:name=".ui.ContactUsActivity" />
        <activity android:name=".ui.AccessibilityActivity" />
        <activity android:name=".ui.AcknowledgementActivity" />
        <activity android:name=".ui.CustomWebViewActivity" />
    </application>

</manifest>