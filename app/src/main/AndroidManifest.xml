                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".ui.AppIntroActivity"/>
        <activity android:name=".ui.base.BaseActivity"/>
        <activity android:name=".ui.base.BaseActivityWithoutActionBarActivity"/>
        <activity android:name=".ui.ShoppingAddressActivity" />
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.ForgotPassword" />
