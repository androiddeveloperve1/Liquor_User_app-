<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:padding="@dimen/dp_5">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_reviewSerialNo"
        style="@style/BlackRegular12spStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:paddingRight="@dimen/dp_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/reviewRatingProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_10"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/bg_yellow_progress_bar"
        app:layout_constraintLeft_toRightOf="@+id/tv_reviewSerialNo"
        app:layout_constraintRight_toLeftOf="@+id/tv_overAllReview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_overAllReview"
        style="@style/BlackRegular12spStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="136"
        android:paddingLeft="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@+id/reviewRatingProgress"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>