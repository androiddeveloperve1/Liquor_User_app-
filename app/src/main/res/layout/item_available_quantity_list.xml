<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:minWidth="@dimen/dp_100"
    android:layout_height="wrap_content"
    android:id="@+id/lyt_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dp_2"
    android:background="@drawable/bg_solid_white_black_border"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingTop="@dimen/dp_5"
    android:paddingBottom="@dimen/dp_5">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_itemQty"
        style="@style/BlackBold14spStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="750ml" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_itemQtyMsg"
        style="@style/BlackRegular12spStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_itemQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bottle" />

</androidx.constraintlayout.widget.ConstraintLayout>