<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.Transparent.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="TransparentCompat" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="Base.MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppThemeFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="DefaultEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="hintTextColor">@color/colorLabel</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="NumberEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="hintTextColor">@color/colorLabel</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="EmailEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="hintTextColor">@color/colorLabel</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="PasswordEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="hintTextColor">@color/colorLabel</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="SwitchBtn12spStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textColor">@color/colorBlack2</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="Switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorRed</item>
        <item name="colorSwitchThumbNormal">@color/colorWhite</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="RedRegular12spStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="RedRegular14spStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/sp_14</item>
